@using BanDoGiaDung.Models
@{
    Layout = null;

    GiaDungDbContext db = new GiaDungDbContext();
    var genres = db.Genres.OrderBy(g => g.genre_name).ToList();
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="~/Content/AdminCSS/Layout/_HeaderLayout.css" rel="stylesheet">

    <style>
        body {
            background: #fafafa;
            font-family: Arial, sans-serif;
        }

        /* ============================= HEADER =============================*/
        .top-header {
            background: white;
            padding: 12px 0;
            border-bottom: 1px solid #eee;
        }

        .search-box input {
            height: 42px;
            border-radius: 20px;
            padding-left: 18px;
            border: 1px solid #ddd;
            width: 100%;
        }

        /* ============================= MENU ĐỎ =============================*/
        .main-menu {
            background-color: darkgreen;
            padding: 10px 0;
        }

            .main-menu ul {
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .main-menu .container {
                display: flex;
                align-items: center;
                gap: 25px; /* khoảng cách giữa các mục */
            }


        /* ============================= MEGA MENU =============================*/
        .menu-item {
            position: relative;
        }

            .menu-item > a {
                color: white !important;
                font-weight: 600;
                padding: 0 14px;
                text-decoration: none;
            }

        /* SUBMENU (bên trái) */
        .submenu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background: white;
            min-width: 240px;
            border-radius: 6px;
            border: 1px solid #eee;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            z-index: 1000;
            padding: 0;
            list-style: none;
        }

        .menu-item:hover .submenu {
            display: block;
        }

        /* ITEM TRONG SUBMENU */
        .submenu li a {
            display: block;
            padding: 12px 15px;
            text-decoration: none;
            color: #333;
            font-weight: 600;
            background: white;
        }

            .submenu li a:hover {
                background: #6cc47f;
                color: #fff;
            }

        /* SUB-SUBMENU (bên phải) */
        .sub-submenu {
            display: none;
            position: absolute;
            top: 0;
            left: 100%;
            background: white;
            min-width: 260px;
            border-radius: 6px;
            border: 1px solid #eee;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            padding: 0;
            list-style: none;
        }

        .submenu li:hover > .sub-submenu {
            display: block;
        }

        .sub-submenu li a {
            padding: 10px 15px;
            display: block;
            color: #333;
            background: white;
        }

            .sub-submenu li a:hover {
                background: #6cc47f;
            }



        /* ============================= FOOTER =============================*/
        footer {
            background: white;
            padding: 40px 0 20px 0;
            border-top: 2px solid #eee;
            margin-top: 40px;
        }

            footer h5 {
                font-size: 17px;
                margin-bottom: 15px;
                font-weight: 700;
            }

            footer a {
                text-decoration: none;
                display: block;
                margin-bottom: 8px;
                color: #555;
            }

                footer a:hover {
                    color: #6cc47f;
                }

        .copyright {
            text-align: center;
            padding-top: 20px;
            margin-top: 20px;
            border-top: 1px solid #eee;
            font-size: 14px;
            color: #666;
        }
    </style>
</head>

<body>

    <!-- ==================== HEADER ==================== -->
    <div class="top-header">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center">
                <img src="https://bizweb.dktcdn.net/100/489/006/themes/978773/assets/logo.png?1763101698779"
                     height="45" class="me-4" />

                <div class="search-box" style="width:350px;">
                    <input type="text" placeholder="Nhập tên hoặc mã sản phẩm..." />
                </div>
            </div>

            <div class="d-flex align-items-center gap-4">
                <div><i class="bi bi-telephone"></i> <b>1900636925</b></div>
                <div><i class="bi bi-envelope"></i> <b>cskh@elmich.vn</b></div>
                @if (Session["Role"] != null && Session["Role"].ToString() == "0")
                {
                    <div class="text-danger"><a class="text-decoration-none text-danger" href="@Url.Action("Index", "Home", new { area = "Admin" })">Admin Panel</a></div>
                }
                    @*<div><i class="bi bi-cart"></i><a href="~/Views/Cart/Index">Giỏ hàng</a> </div>*@
                @{ Html.RenderAction("CartSummary", "Cart"); }
                <div>
                    @if (Session["UserName"] != null)
                    {
                        <div class="dropdown">
                            <button class="btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-2"></i>
                                <span> @Session["UserName"]</span>
                            </button>

                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/Account/EditProfile">
                                        <i class="bi bi-person-lines-fill me-2"></i> Hồ sơ
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="/Account/Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="/Account/Login" class="text-decoration-none text-dark">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                        </a>
                    }
                </div>
            </div>

        </div>
    </div>


    <!-- ==================== MENU ==================== -->
    <div class="main-menu">
        <div class="container d-flex align-items-center">

            <div class="menu-item">
                <a href="#"><i class="bi bi-list"></i> Tất cả sản phẩm</a>

                <!-- SUBMENU (LEFT) -->
                <ul class="submenu">
                    @foreach (var g in genres)
                    {
                        <li class="submenu-item">
                            <a href="/Product?genre=@g.genre_id">
                                @g.genre_name
                            </a>
                        </li>
                    }
                </ul>


            </div>


            <div class="menu-item">
                <a href="#">Đồ Gia Dụng</a>
                <a href="#">Chăm sóc sắc đẹp</a>
                <a href="#">Chăn - Ga - Gối</a>
                <a href="#">Bảo hành</a>
                <a href="#">Hệ thống cửa hàng</a>
                <a href="@Url.Action("TinTuc", "News")">Tin tức</a>

            </div>

        </div>
    </div>


    <!-- ==================== CONTENT ==================== -->
    <div class="container mt-4 mb-4">
        @RenderBody()
    </div>


    <!-- ==================== FOOTER ==================== -->
    <footer class="mt-5">
        <div class="container">

            <div class="row">

                <div class="col-md-3">
                    <img src="https://bizweb.dktcdn.net/100/489/006/themes/978773/assets/logo.png?1763101698779"
                         height="50" class="mb-3" />
                    <p><b>Elmich Group:</b> Ostrava, Czech Republic</p>
                    <p><b>Văn phòng VN:</b> 63 Lê Văn Lương, Hà Nội</p>
                    <p><b>Email:</b> cskh@elmich.vn</p>
                    <p><b>Hotline:</b> 1900 6369 25</p>
                </div>

                <div class="col-md-3">
                    <h5>Hướng dẫn - Chính sách</h5>
                    <a href="#">Hướng dẫn mua hàng</a>
                    <a href="#">Chính sách bảo hành</a>
                    <a href="#">Chính sách đổi trả</a>
                    <a href="#">Chính sách giao hàng</a>
                    <a href="#">Chính sách bảo mật</a>
                </div>

                <div class="col-md-3">
                    <h5>Liên hệ - Giới thiệu</h5>
                    <a href="#">Giới thiệu về Elmich</a>
                    <a href="#">Chứng nhận sản phẩm</a>
                    <a href="#">Hỗ trợ khách hàng</a>
                </div>

                <div class="col-md-3">
                    <h5>Kết nối với chúng tôi</h5>
                    <img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" height="32" class="me-2" />
                    <img src="https://upload.wikimedia.org/wikipedia/commons/0/09/YouTube_full-color_icon_%282017%29.svg" height="32" class="me-2" />

                    <p class="mt-2">Thanh toán</p>
                    <img src="https://seeklogo.com/images/V/vnpay-logo-8B8A291A0F-seeklogo.com.png" height="32" />
                    <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg" height="32" />
                    <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" height="32" />
                </div>
            </div>

            <div class="copyright">© Bản quyền thuộc về Elmich.</div>

        </div>
    </footer>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>


@RenderSection("scripts", required: false)



</html>
