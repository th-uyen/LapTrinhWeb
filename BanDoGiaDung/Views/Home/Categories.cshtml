@using BanDoGiaDung.Models
@{
    GiaDungDbContext db = new GiaDungDbContext();
    var brands = db.Brands
               .OrderByDescending(b => b.Products.Count())
               .Take(6)
               .ToList();
}

<style>
    .featured-wrapper {
        max-width: 1350px;
        margin: 40px auto;
    }

    .featured-title {
        font-size: 22px;
        font-weight: bold;
        color: #222;
        margin-bottom: 15px;
    }

    .featured-list {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        padding: 5px;
        flex-wrap: wrap;
    }

    .featured-item {
        width: 180px;
        height: 160px;
        background: white;
        border-radius: 16px;
        border: 1px solid #eee;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px 10px;
        cursor: pointer;
        transition: 0.25s;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        text-decoration: none;
        color: inherit;
    }

        .featured-item:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        }

        .featured-item img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            margin-bottom: 10px;
        }

    .featured-name {
        font-size: 15px;
        color: #333;
        text-align: center;
        font-weight: 600;
    }
</style>


<div class="featured-wrapper">
    <div class="featured-title">BRAND NỔI BẬT</div>

    <div class="featured-list">
        @foreach (var b in brands)
        {
            <a href="/Product?brand=@b.brand_id" class="featured-item">
                <img src="@b.image" alt="@b.brand_name" />
                <div class="featured-name">@b.brand_name</div>
            </a>
        }
    </div>
</div>
