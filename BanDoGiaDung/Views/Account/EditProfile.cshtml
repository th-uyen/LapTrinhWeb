@model BanDoGiaDung.Models.Account.EditProfileViewModels
@{
    ViewBag.Title = "Hồ Sơ Của Tôi";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

    // Báo cho Sidebar biết là đang ở trang Profile
    ViewBag.ActivePage = "EditProfile";
}

<link href="~/Content/Account/Dasbroad_Profile.css" rel="stylesheet" />

<div class="profile-container">

    @Html.Partial("Dasboard") <main class="profile-content">
        <h3 class="text-center fw-bold mb-4">Thông tin tài khoản</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="card shadow-sm p-4">

            @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, "Họ tên")
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.PhoneNumber, "Số điện thoại")
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-green ">
                        <i class="bi bi-pencil-square me-2 "></i> Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </main>

</div>

<style>
    .btn-green {
        background-color: #4caf50;
    }
    .btn-green:hover {
            background: #e8f5e9;
            border-color: #4caf50;
            color: #2e7d32;
    }
</style>