@model BanDoGiaDung.Models.Account.LoginViewModels
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm p-4">

                <h4 class="text-center mb-4 fw-bold text-success">
                    🔐 Đăng nhập tài khoản
                </h4>

                @using (Html.BeginForm())
                {
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email..." })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu..." })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                    </div>

                    <button class="btn btn-success w-100">Đăng nhập</button>
                }

                <div class="text-center mt-3">
                    <a href="/Account/Register" class="small">👉 Chưa có tài khoản? Đăng ký ngay</a><br />
                    <a href="/Account/ResetPassword" class="small">🔑 Quên mật khẩu?</a>
                </div>

            </div>
        </div>
    </div>
</div>
