@model BanDoGiaDung.Models.Account.ChangePasswordViewModels
@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

    // Báo cho Sidebar biết là đang ở trang ChangePassword
    ViewBag.ActivePage = "ChangePassword";
}

<link href="~/Content/Account/Dasbroad_Profile.css" rel="stylesheet" />

<div class="profile-container">

    @Html.Partial("Dasboard") <main class="profile-content">
        <h3 class="text-center fw-bold mb-4">Đổi mật khẩu</h3>

        <div class="card shadow-sm p-4">

            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.OldPassword, "Mật khẩu cũ")
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.PasswordConfirm, "Xác nhận mật khẩu mới")
                    @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger small" })
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success">
                        Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </main>

</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}