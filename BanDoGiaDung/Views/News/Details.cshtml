@model BanDoGiaDung.Models.NewsArticle
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var otherNews = (new BanDoGiaDung.Services.NewsServices()).GetAllNews()
                    .Where(n => n.Id != Model.Id)
                    .Take(4)
                    .ToList();
}

<style>


    .news-title {
        font-size: 32px;
        font-weight: bold;
        /*color: #228B22;*/
        color:#006400 ;
        line-height: 1.3;
    }

    .news-date {
        color: #777;
        font-size: 14px;
        margin-bottom: 20px;
    }

    .news-content img {
        max-width: 100%;
        width: 100%;
        border-radius: 10px;
    }

    .other-news-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 15px;
        color: #006400;
    }

    .other-item {
        transition: 0.3s;
        cursor: pointer;
    }

    .other-item:hover {
        transform: scale(1.03);
    }

    .other-item img {
        border-radius: 10px;
    }
    .button {
        background-color: #228B22; 
        color: white; /* Chữ màu trắng */
        border: none; /* Bỏ viền */
        padding: 10px 20px; /* Khoảng cách trong */
        font-size: 18px;
        border-radius: 6px; /* Bo góc */
        cursor: pointer; /* Con trỏ dạng bàn tay */
        transition: background-color 0.3s ease;
    }
        .button:hover {
            background-color: #008000; 
        }
</style>


<div class="container mt-4">

    <div class="row">

        <!-- LEFT -->
        <div class="col-md-8">
            <!-- Tiêu đề -->
            <h1 class="news-title">@Model.Title</h1>

            <!-- Ngày đăng -->
            <div class="news-date">
                🗓 Đăng ngày: @Model.PublishDate.ToString("dd/MM/yyyy")
            </div>

            <hr class="my-3" />


            <!-- Ảnh banner -->
            <img src="@Model.ImageUrl" class="img-fluid rounded mb-4" />

            <!-- Nội dung -->
            <div class="news-content">
                @Html.Raw(Model.Content)
            </div>

            <a href="@Url.Action("TinTuc", "News")" class="btn button mt-4">
                ⬅ Quay lại danh sách tin tức
            </a>
        </div>

        <!-- RIGHT – Các tin khác -->
        <div class="col-md-4">
            <div class="other-news-title">📌 Các tin khuyến mãi khác</div>
            <hr class="my-3" />

            @foreach (var item in otherNews)
            {
                <a href="@Url.Action("Details", "News", new { id = item.Id })"
                   class="text-decoration-none text-dark">

                    <div class="other-item mb-4 rounded shadow-sm"
                         style="background-color:#fff; padding:0;">

                        <img src="@item.ImageUrl"
                             style="width:100%; height:150px; object-fit:cover; display:block; border-radius:10px 10px 0 0;" />

                        <div class="p-2">
                            <div class="fw-bold">@item.Title</div>
                            <div class="text-muted" style="font-size:14px;">
                                @item.PublishDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>

                    </div>
                </a>
            }
        </div>


    </div>

</div>
