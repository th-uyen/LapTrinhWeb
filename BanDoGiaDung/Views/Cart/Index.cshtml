@model List<BanDoGiaDung.Models.Cart.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    /* Bà giữ nguyên CSS cũ của bà, tui thêm 2 cái này */
    .cart-table td {
        vertical-align: middle;
    }

    .quantity-input {
        width: 80px;
        text-align: center;
    }
</style>

<div class="container cart-container mt-5">

    @Html.AntiForgeryToken()

    @if (Model != null && Model.Count > 0)
    {
        <h2 class="text-center fw-bold mb-4">🛒 Giỏ hàng của bạn</h2>
        <div class="cart-table p-3">
            <table class="table" id="cart-table">
                <thead>
                    <tr>
                        <th colspan="2">Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td>
                                <img src="@item.Image" class="product-img" />
                            </td>
                            <td>
                                <h5>@item.Name</h5>
                            </td>
                            <td>
                                <span>@item.Price.ToString("N0") ₫</span>
                            </td>
                            <td>
                                <input type="number"
                                       class="form-control quantity-input btn-update-cart"
                                       value="@item.Quantity"
                                       min="0"
                                       max="@item.Stock"
                                       data-id="@item.Id" />
                            </td>
                            <td>
                                <strong id="total_@item.Id">
                                    @item.TotalPrice.ToString("N0") ₫
                                </strong>
                            </td>
                            <td>
                                <button class="btn btn-outline-danger btn-sm btn-remove-cart"
                                        data-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4 align-items-center">
            <div class="col-md-8">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success">
                    <i class="bi bi-arrow-left me-2"></i> Tiếp tục mua hàng
                </a>
                <button class="btn btn-outline-danger ms-2 btn-clear-cart">
                    <i class="bi bi-trash me-2"></i> Xóa toàn bộ
                </button>
            </div>
            <div class="col-md-4 text-end">
                <h4 class="mb-3">
                    Tổng cộng:
                    <span class="text-danger fw-bold" id="cart-page-total">
                        @Model.Sum(x => x.TotalPrice).ToString("N0") ₫
                    </span>
                </h4>
                <a href="@Url.Action("Checkout", "Order")" class="btn btn-success btn-lg w-100">
                    <i class="bi bi-credit-card me-2"></i> Thanh toán
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center p-5">
            <i class="bi bi-cart-x" style="font-size: 80px; color: #ccc;"></i>
            <h3 class="mb-3 mt-3">Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted mb-4">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg">
                <i class="bi bi-house-door me-2"></i> Về trang chủ
            </a>
        </div>
    }
</div>


@section scripts{
    <script src="~/Scripts/cart-ajax.js"></script>
}