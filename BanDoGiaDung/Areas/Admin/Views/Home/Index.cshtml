@using BanDoGiaDung.Models
@model List<Order>

@{
    ViewBag.Title = "Dashboard - Admin";
    // Dùng đúng cái Layout xịn bà mới xin được
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="row g-5 g-xl-8">

    <div class="col-xl-3">
        <div class="card bg-primary hoverable card-xl-stretch mb-xl-8">
            <div class="card-body">
                <i class="bi bi-cart3 text-white fs-2x ms-n1"></i>
                <div class="text-white fw-bolder fs-2 mb-2 mt-5">
                    @ViewBag.TotalOrder
                </div>
                <div class="fw-bold text-white">Tổng Đơn Hàng</div>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card bg-success hoverable card-xl-stretch mb-xl-8">
            <div class="card-body">
                <i class="bi bi-cash-stack text-white fs-2x ms-n1"></i>
                <div class="text-white fw-bolder fs-2 mb-2 mt-5">
                    @string.Format("{0:N0} ₫", ViewBag.TotalRevenue)
                </div>
                <div class="fw-bold text-white">Tổng Doanh Thu</div>
            </div>
        </div>
    </div>

   

    <div class="col-xl-3">
        <div class="card bg-danger hoverable card-xl-stretch mb-xl-8">
            <div class="card-body">
                <i class="bi bi-box-seam text-white fs-2x ms-n1"></i>
                <div class="text-white fw-bolder fs-2 mb-2 mt-5">
                    @ViewBag.TotalProduct
                </div>
                <div class="fw-bold text-white">Tổng Sản Phẩm</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-5 g-xl-8 mt-5">
    <div class="col-xl-12">
        <div class="card card-xl-stretch mb-5 mb-xl-8">
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bolder fs-3 mb-1">Đơn hàng mới nhất</span>
                    <span class="text-muted mt-1 fw-bold fs-7">5 đơn hàng gần đây</span>
                </h3>
            </div>

            <div class="card-body py-3">
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                        <thead>
                            <tr class="fw-bolder text-muted">
                                <th>Mã Đơn</th>
                                <th>Khách Hàng</th>
                                <th>Ngày Đặt</th>
                                <th>Tổng Tiền</th>
                                <th>Trạng Thái</th>
                                <th class="text-end">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="text-dark fw-bolder text-hover-primary fs-6">#@item.order_id</span>
                                    </td>
                                    <td>
                                        <span class="text-dark fw-bolder d-block fs-6">@item.Account.Name</span>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bold d-block fs-7">@item.oder_date.ToString("dd/MM/yyyy")</span>
                                    </td>
                                    <td>
                                        <span class="text-success fw-bolder d-block fs-6">@item.total.ToString("N0") ₫</span>
                                    </td>
                                    <td>
                                        @if (item.status == "1")
                                        {
                                            <span class="badge badge-light-warning">Chờ xử lý</span>
                                        }
                                        else if (item.status == "2")
                                        {
                                            <span class="badge badge-light-primary">Đang giao</span>
                                        }
                                        else if (item.status == "3")
                                        {
                                            <span class="badge badge-light-success">Hoàn thành</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light-danger">Đã hủy</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a href="#" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>