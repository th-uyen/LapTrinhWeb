@model BanDoGiaDung.Models.Brand
@{
    ViewBag.Title = "Add Brand";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

@Html.ValidationSummary(false, "", new { @class = "text-danger" })


<div class="discount-form">

    <div class="page-header mb-4">
        <h4><i class="bi bi-plus-circle me-2"></i>Thêm nhà sản xuất mới</h4>
    </div>

    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm("Create", "Brand", FormMethod.Post, new { area = "Admin" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row">

                    <!-- TÊN -->
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Tên nhà sản xuất <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.brand_name, new
                        {
                            @class = "form-control",
                            placeholder = "VD: SamSung, Aula"
                        })
                        @Html.ValidationMessageFor(m => m.brand_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="form-actions mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Lưu
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-2"></i>Hủy
                        </a>
                    </div>
             }

        </div>
    </div>

</div>

<style>
    .discount-form .card {
        max-width: 900px;
        margin: 0 auto;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
    }

    .form-actions {
        display: flex;
        gap: 10px;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
    }
</style>

