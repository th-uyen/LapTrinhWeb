<link href="~/Content/AdminCSS/Layout/_AsideLayout.css" rel="stylesheet"/>

<aside class="admin-sidebar">
    <div class="sidebar-header">
        <h4><i class="bi bi-shop-window me-2"></i>Admin Panel</h4>
    </div>

    <nav class="sidebar-nav">

        <!-- TỔNG QUAN -->
        <div class="nav-section">
            <div class="nav-section-title">TỔNG QUAN</div>
            <a href="@Url.Action("Index", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span>Tổng quan</span>
            </a>
        </div>

        <!-- QUẢN LÝ -->
        <div class="nav-section">
            <div class="nav-section-title">QUẢN LÝ</div>

            <a href="@Url.Action("Products", "Admin")" class="nav-link">
                <i class="bi bi-box-seam"></i>
                <span>Sản phẩm</span>
            </a>

            <a href="@Url.Action("Categories", "Admin")" class="nav-link">
                <i class="bi bi-grid"></i>
                <span>Thương hiệu</span>
            </a>

            <a href="@Url.Action("Orders", "Admin")" class="nav-link">
                <i class="bi bi-cart-check"></i>
                <span>Đơn hàng</span>
            </a>

            <a href="@Url.Action("Discounts", "Admin")" class="nav-link">
                <i class="bi bi-percent"></i>
                <span>Chương trình giảm giá</span>
            </a>
        </div>

        <!-- QUẢN LÝ ĐẶT HÀNG -->
        <div class="nav-section">
            <div class="nav-section-title">QUẢN LÝ ĐẶT HÀNG</div>

            <a href="@Url.Action("OrderList", "Admin")" class="nav-link">
                <i class="bi bi-list-check"></i>
                <span>Danh sách đơn hàng</span>
            </a>
        </div>

        <!-- QUẢN LÝ TÀI KHOẢN -->
        <div class="nav-section">
            <div class="nav-section-title">QUẢN LÝ TÀI KHOẢN</div>

            <a href="@Url.Action("Accounts", "Admin")" class="nav-link">
                <i class="bi bi-person-badge"></i>
                <span>Tài khoản</span>
            </a>
        </div>

    </nav>
</aside>

