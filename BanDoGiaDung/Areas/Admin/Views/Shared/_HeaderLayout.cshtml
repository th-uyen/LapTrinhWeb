<link href="~/Content/AdminCSS/Layout/_HeaderLayout.css" rel="stylesheet">

<header class="admin-header">
    <div class="header-left">
        <button class="btn-toggle-sidebar">
            <i class="bi bi-house"></i>
        </button>
        <h5 class="page-title">@ViewBag.Title</h5>
    </div>

    <div class="header-right">
        <!-- Thông báo -->
        <div class="header-item">
            <button class="btn-icon" title="Thông báo">
                <i class="bi bi-bell"></i>
                <span class="badge">3</span>
            </button>
        </div>

        <!-- User Dropdown -->
        <div class="dropdown">
            <button class="btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-2"></i>
                <span>@Session["UserName"]</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                        <i class="bi bi-person me-2"></i> Hồ sơ
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Settings", "Admin")">
                        <i class="bi bi-gear me-2"></i> Cài đặt
                    </a>
                </li>

                <li>
                    <a class="dropdown-item" href="@Url.Action("Index", "Home")">
                        <i class="bi bi-gear me-2"></i> Quay lại
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>
